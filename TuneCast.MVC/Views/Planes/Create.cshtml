@model TuneCastModelo.Plan

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="page-header text-white p-4 rounded" style="background: linear-gradient(135deg, #8B5CF6 0%, #06B6D4 100%); box-shadow: 0 10px 30px rgba(139, 92, 246, 0.3);">
        <h1><i class="fas fa-plus me-2"></i> Crear Nuevo Plan</h1>
        <p class="lead">Completa los campos para agregar un nuevo plan de suscripción</p>
    </div>

    <div class="card shadow mt-4 p-4 rounded" style="border-radius: 1.5rem;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label fw-bold">Nombre del Plan</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Precio" class="form-label fw-bold">Precio Base ($)</label>
                <input asp-for="Precio" class="form-control" step="0.01" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Volver a la Lista
                </a>
                <button type="submit" class="btn btn-primary" style="background: linear-gradient(135deg, #06B6D4 0%, #67E8F9 100%); border: none;">
                    <i class="fas fa-save me-1"></i> Guardar Plan
                </button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
