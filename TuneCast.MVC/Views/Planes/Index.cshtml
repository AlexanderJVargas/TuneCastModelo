@model IEnumerable<TuneCastModelo.Plan>

@{
    ViewData["Title"] = "Gestión de Planes";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-purple: #7A00D4;
            --light-purple: #B486F6;
            --teal: #00C6C6;
            --black: #000000;
            --dark-purple: #3D0026;
            --white: #FFFFFF;
            --light-gray: #F8F9FA;
            --border-gray: #E0E0E0;
            --success-green: #28A745;
            --warning-orange: #FFC107;
            --danger-red: #DC3545;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, var(--light-purple) 0%, var(--teal) 100%);
            min-height: 100vh;
            padding: 20px 0;
        }

        .container-custom {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .page-header {
            background: linear-gradient(135deg, var(--primary-purple) 0%, var(--dark-purple) 100%);
            color: var(--white);
            padding: 40px;
            border-radius: 20px;
            text-align: center;
            margin-bottom: 30px;
            box-shadow: 0 15px 35px rgba(122, 0, 212, 0.3);
            position: relative;
            overflow: hidden;
        }

            .page-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="75" cy="75" r="1" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
                opacity: 0.3;
            }

            .page-header > * {
                position: relative;
                z-index: 1;
            }

            .page-header h1 {
                font-size: 3em;
                margin-bottom: 10px;
                font-weight: 700;
            }

            .page-header p {
                font-size: 1.3em;
                opacity: 0.9;
            }

        .stats-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: var(--white);
            border-radius: 20px;
            padding: 30px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border-left: 5px solid var(--teal);
            transition: all 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            }

            .stat-card:nth-child(2) {
                border-left-color: var(--primary-purple);
            }

            .stat-card:nth-child(3) {
                border-left-color: var(--warning-orange);
            }

            .stat-card:nth-child(4) {
                border-left-color: var(--success-green);
            }

        .stat-icon {
            font-size: 2.5em;
            margin-bottom: 15px;
            color: var(--primary-purple);
        }

        .stat-number {
            font-size: 2.8em;
            font-weight: 800;
            color: var(--dark-purple);
            margin-bottom: 10px;
        }

        .stat-label {
            color: #666;
            font-size: 1.1em;
            font-weight: 600;
        }

        .actions-bar {
            background: var(--white);
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }

        .iva-notice {
            background: linear-gradient(135deg, rgba(0, 198, 198, 0.1), rgba(122, 0, 212, 0.1));
            border: 2px solid var(--light-purple);
            border-radius: 12px;
            padding: 20px;
            display: flex;
            align-items: center;
            gap: 15px;
            flex: 1;
            min-width: 300px;
        }

            .iva-notice i {
                font-size: 1.5em;
                color: var(--primary-purple);
            }

        .iva-notice-text h4 {
            color: var(--primary-purple);
            margin-bottom: 5px;
        }

        .iva-notice-text p {
            color: #666;
            margin: 0;
        }

        .btn {
            padding: 12px 25px;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            font-size: 1em;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-purple), var(--dark-purple));
            color: var(--white);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(122, 0, 212, 0.4);
                color: var(--white);
                text-decoration: none;
            }

        .btn-success {
            background: var(--success-green);
            color: var(--white);
        }

        .btn-warning {
            background: var(--warning-orange);
            color: var(--white);
        }

        .btn-danger {
            background: var(--danger-red);
            color: var(--white);
        }

        .btn-info {
            background: var(--teal);
            color: var(--white);
        }

        .btn-sm {
            padding: 8px 15px;
            font-size: 0.9em;
        }

        .plans-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 30px;
            margin-bottom: 40px;
        }

        .plan-card {
            background: var(--white);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            position: relative;
        }

            .plan-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 25px 50px rgba(122, 0, 212, 0.2);
            }

            .plan-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 5px;
                background: linear-gradient(90deg, var(--primary-purple), var(--teal));
            }

        .plan-header {
            padding: 30px;
            text-align: center;
            background: linear-gradient(135deg, rgba(122, 0, 212, 0.05), rgba(0, 198, 198, 0.05));
        }

        .plan-name {
            font-size: 1.8em;
            font-weight: 700;
            color: var(--primary-purple);
            margin-bottom: 15px;
        }

        .plan-pricing {
            margin-bottom: 20px;
        }

        .plan-price-base {
            font-size: 1.2em;
            color: #666;
            text-decoration: line-through;
            margin-bottom: 5px;
        }

        .plan-price-final {
            font-size: 2.5em;
            font-weight: 800;
            color: var(--dark-purple);
            margin-bottom: 5px;
        }

            .plan-price-final .currency {
                font-size: 0.6em;
                vertical-align: top;
            }

        .iva-badge {
            display: inline-block;
            background: var(--teal);
            color: var(--white);
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8em;
            font-weight: 600;
        }

        .plan-users {
            color: var(--teal);
            font-weight: 600;
            font-size: 1.1em;
        }

        .plan-body {
            padding: 30px;
        }

        .plan-description {
            color: #666;
            margin-bottom: 25px;
            line-height: 1.6;
            font-size: 1.05em;
        }

        .plan-features {
            list-style: none;
            margin-bottom: 30px;
        }

            .plan-features li {
                padding: 10px 0;
                color: #555;
                display: flex;
                align-items: center;
                border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            }

                .plan-features li:last-child {
                    border-bottom: none;
                }

                .plan-features li::before {
                    content: '✓';
                    color: var(--success-green);
                    font-weight: bold;
                    margin-right: 12px;
                    width: 25px;
                    height: 25px;
                    border-radius: 50%;
                    background: rgba(40, 167, 69, 0.1);
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 0.9em;
                }

        .plan-actions {
            display: flex;
            gap: 10px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .table-section {
            background: var(--white);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .table-header {
            background: linear-gradient(135deg, var(--primary-purple), var(--dark-purple));
            color: var(--white);
            padding: 25px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .table-header h3 {
                margin: 0;
                font-size: 1.5em;
            }

        .table-responsive {
            overflow-x: auto;
        }

        .plans-table {
            width: 100%;
            border-collapse: collapse;
        }

            .plans-table th {
                background: var(--light-gray);
                padding: 20px;
                text-align: left;
                font-weight: 600;
                color: var(--dark-purple);
                border-bottom: 2px solid var(--border-gray);
            }

            .plans-table td {
                padding: 20px;
                border-bottom: 1px solid var(--border-gray);
                vertical-align: middle;
            }

            .plans-table tr:hover {
                background: rgba(122, 0, 212, 0.03);
            }

        .price-breakdown {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        .base-price {
            color: #666;
            font-size: 0.9em;
        }

        .final-price {
            font-weight: 700;
            color: var(--primary-purple);
            font-size: 1.1em;
        }

        .user-count {
            background: var(--teal);
            color: var(--white);
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.9em;
            font-weight: 600;
            display: inline-block;
        }

       
    </style>
</head>
<body>
    <div class="container-custom">
        <!-- Cabeza -->
        <div class="page-header">
            <h1><img src="Images\Icono.png" alt="Logo" style="width: 60px; height: 60px;"> TuneCast</h1>
            <p>Sistema de Gestión de Planes de Suscripción</p>
        </div>

        <!-- Sección de estadísticas -->
        <div class="stats-section">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-layer-group"></i>
                </div>
                <div class="stat-number">@(Model?.Count() ?? 0)</div>
                <div class="stat-label">Planes Activos</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-number">@(Model?.Sum(p => p.Nombre == "Personal" ? 1 : p.Nombre == "Familiar" ? 4 : 50) ?? 0)</div>
                <div class="stat-label">Usuarios Máximos</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <div class="stat-number">$@(Model?.Sum(p => p.Precio) ?? 0)</div>
                <div class="stat-label">Ingresos Potenciales</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-percentage"></i>
                </div>
                <div class="stat-number">15%</div>
                <div class="stat-label">IVA Incluido</div>
            </div>
        </div>

      
        <div class="actions-bar">
            <div class="iva-notice">
                <i class="fas fa-info-circle"></i>
                <div class="iva-notice-text">
                    <h4>Información sobre IVA</h4>
                    <p>Todos los precios mostrados incluyen IVA del 15%. Los precios base se calculan automáticamente.</p>
                </div>
            </div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Crear Nuevo Plan
            </a>
        </div>

       
        <div class="plans-grid">
            @if (Model != null && Model.Any())
            {
                @foreach (var plan in Model)
                {
                    var precioBase = Math.Round(plan.Precio / 1.15, 2);
                    var maxUsers = plan.Nombre.ToLower() == "personal" ? 1 :
                    plan.Nombre.ToLower() == "familiar" ? 4 : 50;

                    <div class="plan-card">
                        <div class="plan-header">
                            <div class="plan-name">@plan.Nombre</div>
                            <div class="plan-pricing">
                                <div class="plan-price-base">Base: $@precioBase</div>
                                <div class="plan-price-final">
                                    <span class="currency">$</span>@plan.Precio
                                </div>
                                <div class="iva-badge">IVA 15% incluido</div>
                            </div>
                            <div class="plan-users">Hasta @maxUsers usuario@(maxUsers > 1 ? "s" : "")</div>
                        </div>
                        <div class="plan-body">
                            <div class="plan-description">
                                @plan.Descripcion
                            </div>
                            <ul class="plan-features">
                                @if (plan.Nombre.ToLower() == "personal")
                                {
                                    <li>Streaming de música básico</li>
                                    <li>Calidad estándar</li>
                                    <li>Anuncios limitados</li>
                                    <li>1 dispositivo simultáneo</li>
                                }
                                else if (plan.Nombre.ToLower() == "familiar")
                                {
                                    <li>Streaming sin anuncios</li>
                                    <li>Calidad alta</li>
                                    <li>4 perfiles familiares</li>
                                    <li>Descarga offline</li>
                                    <li>4 dispositivos simultáneos</li>
                                }
                                else
                                {
                                    <li>Streaming premium sin anuncios</li>
                                    <li>Calidad lossless</li>
                                    <li>Gestión de usuarios</li>
                                    <li>Análisis de uso</li>
                                    <li>Dispositivos ilimitados</li>
                                    <li>Soporte prioritario</li>
                                }
                            </ul>
                            <div class="plan-actions">
                                <a asp-action="Details" asp-route-id="@plan.Id" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Ver
                                </a>
                                <a asp-action="Edit" asp-route-id="@plan.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@plan.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div style="grid-column: 1 / -1; text-align: center; padding: 40px;">
                    <i class="fas fa-inbox" style="font-size: 3em; color: #ccc; margin-bottom: 20px;"></i>
                    <h3 style="color: #666;">No hay planes registrados</h3>
                    <p style="color: #999;">Comienza creando tu primer plan de suscripción</p>
                    <a asp-action="Create" class="btn btn-primary" style="margin-top: 20px;">
                        <i class="fas fa-plus"></i> Crear Primer Plan
                    </a>
                </div>
            }
        </div>

        
        @if (Model != null && Model.Any())
        {
            <div class="table-section">
                <div class="table-header">
                    <h3><i class="fas fa-table"></i> Vista Detallada de Planes</h3>
                </div>
                <div class="table-responsive">
                    <table class="plans-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Usuarios</th>
                                <th>Precios</th>
                                <th>Descripción</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var plan in Model)
                            {
                                var precioBase = Math.Round(plan.Precio / 1.15, 2);
                                var maxUsers = plan.Nombre.ToLower() == "personal" ? 1 :
                                plan.Nombre.ToLower() == "familiar" ? 4 : 50;

                                <tr>
                                    <td><strong>@plan.Id</strong></td>
                                    <td>
                                        <strong style="color: var(--primary-purple);">@plan.Nombre</strong>
                                    </td>
                                    <td>
                                        <span class="user-count">@maxUsers usuario@(maxUsers > 1 ? "s" : "")</span>
                                    </td>
                                    <td>
                                        <div class="price-breakdown">
                                            <span class="base-price">Base: $@precioBase</span>
                                            <span class="final-price">Final: $@plan.Precio</span>
                                        </div>
                                    </td>
                                    <td>@plan.Descripcion</td>
                                    <td>
                                        <div style="display: flex; gap: 5px; flex-wrap: wrap;">
                                            <a asp-action="Details" asp-route-id="@plan.Id" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@plan.Id" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@plan.Id" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</body>
</html>