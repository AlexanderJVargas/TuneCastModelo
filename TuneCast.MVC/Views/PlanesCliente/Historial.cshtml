@model IEnumerable<TuneCastModelo.Suscripcion>

@{
    ViewData["Title"] = "Historial de Suscripciones";
    Layout = "_Layout";
    var planes = ViewBag.Planes as List<TuneCastModelo.Plan>;
}

<style>
    :root {
        --primary-purple: #7A00D4;
        --light-purple: #B486F6;
        --teal: #00C6C6;
        --black: #000000;
        --dark-purple: #3D0026;
        --white: #FFFFFF;
        --light-gray: #F8F9FA;
        --border-gray: #E0E0E0;
    }

    body {
        background: linear-gradient(135deg, var(--light-purple) 0%, var(--teal) 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .history-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .page-header {
        background: linear-gradient(135deg, var(--primary-purple) 0%, var(--dark-purple) 100%);
        color: var(--white);
        padding: 40px;
        border-radius: 20px;
        text-align: center;
        margin-bottom: 30px;
        box-shadow: 0 20px 40px rgba(122, 0, 212, 0.3);
    }

        .page-header h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .page-header p {
            font-size: 1.2em;
            opacity: 0.9;
        }

    .back-button {
        background: var(--white);
        border-radius: 15px;
        padding: 15px;
        margin-bottom: 30px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .history-content {
        background: var(--white);
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .timeline {
        position: relative;
        padding-left: 30px;
    }

        .timeline::before {
            content: '';
            position: absolute;
            left: 15px;
            top: 0;
            bottom: 0;
            width: 3px;
            background: linear-gradient(to bottom, var(--primary-purple), var(--teal));
            border-radius: 2px;
        }

    .timeline-item {
        position: relative;
        margin-bottom: 40px;
        background: var(--white);
        border-radius: 15px;
        padding: 25px;
        margin-left: 40px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        border-left: 5px solid var(--teal);
        transition: all 0.3s ease;
    }

        .timeline-item:hover {
            transform: translateX(5px);
            box-shadow: 0 15px 35px rgba(122, 0, 212, 0.15);
        }

        .timeline-item.active {
            border-left-color: var(--primary-purple);
            background: linear-gradient(135deg, rgba(122, 0, 212, 0.05), rgba(0, 198, 198, 0.05));
        }

    .timeline-marker {
        position: absolute;
        left: -67px;
        top: 25px;
        width: 20px;
        height: 20px;
        background: var(--teal);
        border-radius: 50%;
        border: 4px solid var(--white);
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
    }

    .timeline-item.active .timeline-marker {
        background: var(--primary-purple);
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%

    {
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2), 0 0 0 0 rgba(122, 0, 212, 0.7);
    }

    70% {
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2), 0 0 0 10px rgba(122, 0, 212, 0);
    }

    100% {
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2), 0 0 0 0 rgba(122, 0, 212, 0);
    }

    }

    .subscription-header {
        display: flex;
        justify-content: between;
        align-items: center;
        margin-bottom: 20px;
        flex-wrap: wrap;
        gap: 15px;
    }

    .plan-info {
        flex: 1;
    }

    .plan-name {
        font-size: 1.8em;
        font-weight: 700;
        color: var(--primary-purple);
        margin-bottom: 5px;
    }

    .plan-price {
        font-size: 1.4em;
        font-weight: 600;
        color: var(--dark-purple);
    }

    .status-badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9em;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-active {
        background: linear-gradient(135deg, var(--teal), rgba(0, 198, 198, 0.8));
        color: var(--white);
    }

    .status-inactive {
        background: #E0E0E0;
        color: #666;
    }

    .subscription-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 20px;
    }

    .detail-item {
        background: rgba(122, 0, 212, 0.05);
        padding: 15px;
        border-radius: 10px;
        text-align: center;
        border: 1px solid rgba(122, 0, 212, 0.1);
    }

    .detail-label {
        color: #666;
        font-size: 0.9em;
        margin-bottom: 5px;
        text-transform: uppercase;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .detail-value {
        color: var(--dark-purple);
        font-size: 1.1em;
        font-weight: 600;
    }

    .plan-description {
        color: #666;
        line-height: 1.6;
        font-style: italic;
        margin-top: 15px;
        padding: 15px;
        background: rgba(0, 198, 198, 0.05);
        border-radius: 10px;
        border-left: 4px solid var(--teal);
    }

    .empty-history {
        text-align: center;
        padding: 60px 20px;
        color: #666;
    }

    .empty-history-icon {
        background: linear-gradient(135deg, var(--light-purple), var(--teal));
        color: var(--white);
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 2em;
    }

    .empty-history h3 {
        color: var(--primary-purple);
        margin-bottom: 15px;
        font-size: 1.8em;
    }

    .empty-history p {
        font-size: 1.1em;
        margin-bottom: 25px;
    }

    .btn {
        padding: 15px 30px;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        font-size: 1em;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary-purple), var(--dark-purple));
        color: var(--white);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(122, 0, 212, 0.3);
            color: var(--white);
            text-decoration: none;
        }

    .btn-outline {
        background: transparent;
        border: 2px solid var(--teal);
        color: var(--teal);
    }

        .btn-outline:hover {
            background: var(--teal);
            color: var(--white);
            text-decoration: none;
        }

    .stats-summary {
        background: linear-gradient(135deg, rgba(122, 0, 212, 0.1), rgba(0, 198, 198, 0.1));
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 30px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        font-size: 2em;
        font-weight: 800;
        color: var(--primary-purple);
        margin-bottom: 5px;
    }

    .stat-label {
        color: #666;
        font-size: 0.9em;
        text-transform: uppercase;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

   
</style>

<div class="history-container">
    <div class="page-header">
        <h1><i class="fas fa-history"></i> Historial de Suscripciones</h1>
        <p>Revisa todos tus planes y cambios de suscripción</p>
    </div>

    <div class="back-button">
        <a href="@Url.Action("Index")" class="btn btn-outline">
            <i class="fas fa-arrow-left"></i> Volver a Mis Planes
        </a>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle"></i> @ViewBag.ErrorMessage
        </div>
    }

    <div class="history-content">
        @if (Model != null && Model.Any())
        {
            <div class="stats-summary">
                <div class="stat-item">
                    <div class="stat-number">@Model.Count()</div>
                    <div class="stat-label">Total Suscripciones</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">@Model.Count(s => s.Activa)</div>
                    <div class="stat-label">Activas</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">@Model.Count(s => !s.Activa)</div>
                    <div class="stat-label">Finalizadas</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">@((DateTime.UtcNow - Model.OrderBy(s => s.FechaInicio).First().FechaInicio).Days)</div>
                    <div class="stat-label">Días como Cliente</div>
                </div>
            </div>

            <div class="timeline">
                @foreach (var suscripcion in Model)
                {
                    var plan = planes?.FirstOrDefault(p => p.Id == suscripcion.PlanId);
                    var planNombre = plan?.Nombre ?? "Plan Desconocido";
                    var planPrecio = plan?.Precio ?? 0;
                    var planDescripcion = plan?.Descripcion ?? "Descripción no disponible";

                    <div class="timeline-item @(suscripcion.Activa ? "active" : "")">
                        <div class="timeline-marker"></div>

                        <div class="subscription-header">
                            <div class="plan-info">
                                <div class="plan-name">@planNombre</div>
                                <div class="plan-price">$@planPrecio.ToString("F2") / mes</div>
                            </div>
                            <div class="status-badge @(suscripcion.Activa ? "status-active" : "status-inactive")">
                                @(suscripcion.Activa ? "Activa" : "Finalizada")
                            </div>
                        </div>

                        <div class="subscription-details">
                            <div class="detail-item">
                                <div class="detail-label">Fecha de Inicio</div>
                                <div class="detail-value">@suscripcion.FechaInicio.ToString("dd/MM/yyyy")</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">
                                    @(suscripcion.Activa ? "Próxima Renovación" : "Fecha de Fin")
                                </div>
                                <div class="detail-value">@suscripcion.FechaFin.ToString("dd/MM/yyyy")</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Duración</div>
                                <div class="detail-value">
                                    @{
                                        var duracion = suscripcion.Activa ?
                                        (DateTime.UtcNow - suscripcion.FechaInicio).Days :
                                        (suscripcion.FechaFin - suscripcion.FechaInicio).Days;
                                    }
                                    @duracion días
                                </div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">ID Suscripción</div>
                                <div class="detail-value">#@suscripcion.Id.ToString("D4")</div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(planDescripcion))
                        {
                            <div class="plan-description">
                                <i class="fas fa-info-circle"></i> @planDescripcion
                            </div>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-history">
                <div class="empty-history-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <h3>Sin Historial de Suscripciones</h3>
                <p>Aún no tienes suscripciones registradas. ¡Comienza eligiendo un plan que se adapte a ti!</p>
                <a href="@Url.Action("Index")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Explorar Planes
                </a>
            </div>
        }
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">