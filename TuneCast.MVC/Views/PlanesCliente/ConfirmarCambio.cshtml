@model TuneCastModelo.Plan

@{
    ViewData["Title"] = "Confirmar Cambio de Plan";
    Layout = "_Layout";
}

<style>
    :root {
        --primary-purple: #7A00D4;
        --light-purple: #B486F6;
        --teal: #00C6C6;
        --black: #000000;
        --dark-purple: #3D0026;
        --white: #FFFFFF;
        --light-gray: #F8F9FA;
        --border-gray: #E0E0E0;
    }

    body {
        background: linear-gradient(135deg, var(--light-purple) 0%, var(--teal) 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .confirmation-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 20px;
    }

    .confirmation-card {
        background: var(--white);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .confirmation-header {
        background: linear-gradient(135deg, var(--primary-purple) 0%, var(--dark-purple) 100%);
        color: var(--white);
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
    }

        .confirmation-header h1 {
            font-size: 2.2em;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .confirmation-header p {
            font-size: 1.1em;
            opacity: 0.9;
        }

    .plan-preview {
        background: linear-gradient(135deg, rgba(122, 0, 212, 0.05), rgba(0, 198, 198, 0.05));
        border: 3px solid var(--teal);
        border-radius: 20px;
        padding: 30px;
        margin: 30px 0;
    }

    .plan-name {
        font-size: 2.5em;
        font-weight: 800;
        color: var(--primary-purple);
        margin-bottom: 15px;
    }

    .plan-price {
        margin-bottom: 20px;
    }

    .price-amount {
        font-size: 3.5em;
        font-weight: 800;
        color: var(--dark-purple);
        line-height: 1;
    }

    .price-currency {
        font-size: 0.6em;
        vertical-align: top;
    }

    .price-period {
        color: #666;
        font-size: 1.2em;
        margin-top: 10px;
    }

    .plan-description {
        font-size: 1.2em;
        color: #666;
        margin-bottom: 25px;
        line-height: 1.6;
    }

    .plan-features {
        list-style: none;
        padding: 0;
        margin: 25px 0;
        text-align: left;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

        .plan-features li {
            padding: 12px 0;
            display: flex;
            align-items: center;
            color: #555;
            font-size: 1.1em;
        }

            .plan-features li::before {
                content: '✓';
                background: var(--teal);
                color: var(--white);
                width: 28px;
                height: 28px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                margin-right: 15px;
                font-weight: bold;
                font-size: 0.9em;
            }

    .warning-section {
        background: rgba(255, 193, 7, 0.1);
        border: 2px solid #FFC107;
        border-radius: 15px;
        padding: 25px;
        margin: 30px 0;
    }

        .warning-section h3 {
            color: #856404;
            margin-bottom: 15px;
            font-size: 1.3em;
        }

        .warning-section p {
            color: #856404;
            margin-bottom: 10px;
            line-height: 1.6;
        }

    .action-buttons {
        display: flex;
        gap: 20px;
        justify-content: center;
        margin-top: 40px;
        flex-wrap: wrap;
    }

    .btn {
        padding: 18px 35px;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
        font-size: 1.1em;
        min-width: 180px;
        justify-content: center;
    }

    .btn-confirm {
        background: linear-gradient(135deg, var(--teal), var(--primary-purple));
        color: var(--white);
    }

        .btn-confirm:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 25px rgba(0, 198, 198, 0.3);
            color: var(--white);
            text-decoration: none;
        }

    .btn-cancel {
        background: transparent;
        border: 3px solid var(--primary-purple);
        color: var(--primary-purple);
    }

        .btn-cancel:hover {
            background: var(--primary-purple);
            color: var(--white);
            text-decoration: none;
            transform: translateY(-3px);
        }

    .confirmation-icon {
        background: linear-gradient(135deg, var(--teal), var(--primary-purple));
        color: var(--white);
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 2em;
    }

    .terms-section {
        background: rgba(122, 0, 212, 0.05);
        border-radius: 15px;
        padding: 20px;
        margin: 25px 0;
        text-align: left;
    }

        .terms-section h4 {
            color: var(--primary-purple);
            margin-bottom: 15px;
        }

        .terms-section ul {
            padding-left: 20px;
            color: #666;
        }

        .terms-section li {
            margin-bottom: 8px;
            line-height: 1.5;
        }

    
</style>

<div class="confirmation-container">
    <div class="confirmation-card">
        <div class="confirmation-header">
            <div class="confirmation-icon">
                <i class="fas fa-exchange-alt"></i>
            </div>
            <h1>Confirmar Cambio de Plan</h1>
            <p>Estás a punto de cambiar a un nuevo plan de suscripción</p>
        </div>

        <div class="plan-preview">
            <div class="plan-name">@Model.Nombre</div>

            <div class="plan-price">
                <div class="price-amount">
                    <span class="price-currency">$</span>@Model.Precio.ToString("F2")
                </div>
                <div class="price-period">por mes</div>
            </div>

            <div class="plan-description">
                @Model.Descripcion
            </div>

            <ul class="plan-features">
                @if (Model.Nombre.ToLower().Contains("personal"))
                {
                    <li>Streaming de música básico</li>
                    <li>Calidad estándar</li>
                    <li>Anuncios limitados</li>
                    <li>1 dispositivo simultáneo</li>
                    <li>Biblioteca musical completa</li>
                }
                else if (Model.Nombre.ToLower().Contains("familiar"))
                {
                    <li>Streaming sin anuncios</li>
                    <li>Calidad alta de audio</li>
                    <li>Hasta 6 perfiles familiares</li>
                    <li>Descarga offline ilimitada</li>
                    <li>6 dispositivos simultáneos</li>
                    <li>Playlist familiares compartidas</li>
                }
                else if (Model.Nombre.ToLower().Contains("empresarial"))
                {
                    <li>Streaming premium sin anuncios</li>
                    <li>Calidad lossless y Hi-Fi</li>
                    <li>Gestión avanzada de usuarios</li>
                    <li>Análisis y reportes de uso</li>
                    <li>Dispositivos ilimitados</li>
                    <li>Soporte prioritario 24/7</li>
                    <li>API para integración empresarial</li>
                }
                else
                {
                    <li>Todas las funciones incluidas</li>
                    <li>Acceso completo a la biblioteca</li>
                    <li>Soporte al cliente</li>
                    <li>Streaming de alta calidad</li>
                }
            </ul>
        </div>

        <div class="warning-section">
            <h3><i class="fas fa-exclamation-triangle"></i> Información Importante</h3>
            <p><strong>Al confirmar este cambio:</strong></p>
            <p>• Tu plan actual será cancelado inmediatamente</p>
            <p>• El nuevo plan comenzará de inmediato</p>
            <p>• El próximo cobro será en 30 días por el monto del nuevo plan</p>
            <p>• No se realizarán reembolsos proporcionales</p>
        </div>

        <div class="terms-section">
            <h4><i class="fas fa-file-contract"></i> Términos del Cambio</h4>
            <ul>
                <li>El cambio de plan es efectivo inmediatamente</li>
                <li>Las características del nuevo plan estarán disponibles al instante</li>
                <li>La facturación del nuevo plan comenzará en la próxima fecha de renovación</li>
                <li>Puedes cambiar de plan nuevamente cuando lo desees</li>
                <li>Se aplicarán los términos y condiciones del nuevo plan</li>
            </ul>
        </div>

        <div class="action-buttons">
            <form asp-action="CambiarPlan" method="post" style="display: inline;">
                <input type="hidden" name="planId" value="@Model.Id" />
                <button type="submit" class="btn btn-confirm" onclick="return confirm('¿Estás seguro de que quieres cambiar a este plan?')">
                    <i class="fas fa-check"></i> Confirmar Cambio
                </button>
            </form>

            <a href="@Url.Action("Index")" class="btn btn-cancel">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">