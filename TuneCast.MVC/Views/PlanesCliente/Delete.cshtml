@model TuneCastModelo.Plan

@{
    ViewData["Title"] = "Eliminar Plan";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-purple: #7A00D4;
            --light-purple: #B486F6;
            --teal: #00C6C6;
            --black: #000000;
            --dark-purple: #3D0026;
            --white: #FFFFFF;
            --light-gray: #F8F9FA;
            --border-gray: #E0E0E0;
            --success-green: #28A745;
            --warning-orange: #FFC107;
            --danger-red: #DC3545;
            --info-blue: #17A2B8;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, var(--light-purple) 0%, var(--teal) 100%);
            min-height: 100vh;
            padding: 20px 0;
        }

        .container-custom {
            max-width: 1000px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .page-header {
            background: linear-gradient(135deg, var(--danger-red) 0%, #c82333 100%);
            color: var(--white);
            padding: 40px;
            border-radius: 20px;
            text-align: center;
            margin-bottom: 30px;
            box-shadow: 0 15px 35px rgba(220, 53, 69, 0.3);
            position: relative;
            overflow: hidden;
        }

            .page-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="75" cy="75" r="1" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
                opacity: 0.3;
            }

            .page-header > * {
                position: relative;
                z-index: 1;
            }

            .page-header h1 {
                font-size: 2.5em;
                margin-bottom: 10px;
                font-weight: 700;
            }

            .page-header p {
                font-size: 1.2em;
                opacity: 0.9;
            }

        .warning-icon {
            font-size: 4em;
            margin-bottom: 20px;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }

            100% {
                transform: scale(1);
            }
        }

        .content-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 30px;
        }

        .plan-preview {
            background: var(--white);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            position: relative;
            border: 3px solid var(--danger-red);
        }

            .plan-preview::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 6px;
                background: linear-gradient(90deg, var(--danger-red), #c82333);
            }

        .delete-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: var(--danger-red);
            color: var(--white);
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 0.9em;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
            animation: blink 1.5s infinite;
        }

        @@keyframes blink {
            0%, 50% {
                opacity: 1;
            }

            51%, 100% {
                opacity: 0.5;
            }
        }

        .plan-header {
            background: linear-gradient(135deg, rgba(220, 53, 69, 0.05), rgba(200, 35, 51, 0.05));
            padding: 40px;
            text-align: center;
            position: relative;
        }

        .plan-name {
            font-size: 2em;
            font-weight: 700;
            color: var(--danger-red);
            margin-bottom: 20px;
        }

        .plan-price {
            font-size: 2.5em;
            font-weight: 800;
            color: var(--dark-purple);
            margin-bottom: 15px;
        }

            .plan-price .currency {
                font-size: 0.5em;
                vertical-align: top;
            }

        .iva-info {
            display: inline-block;
            background: var(--teal);
            color: var(--white);
            padding: 8px 15px;
            border-radius: 15px;
            font-size: 0.9em;
            font-weight: 600;
        }

        .plan-body {
            padding: 30px;
        }

        .plan-description {
            color: #666;
            line-height: 1.6;
            font-size: 1.05em;
            margin-bottom: 25px;
            background: var(--light-gray);
            padding: 20px;
            border-radius: 12px;
            border-left: 4px solid var(--danger-red);
        }

        .plan-stats {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
        }

        .stat-item {
            background: rgba(220, 53, 69, 0.05);
            padding: 15px;
            border-radius: 12px;
            text-align: center;
            border: 1px solid rgba(220, 53, 69, 0.2);
        }

        .stat-label {
            font-size: 0.9em;
            color: #666;
            margin-bottom: 5px;
        }

        .stat-value {
            font-weight: 700;
            color: var(--danger-red);
            font-size: 1.2em;
        }

        .warning-panel {
            background: var(--white);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            border: 3px solid var(--warning-orange);
            position: relative;
        }

            .warning-panel::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 6px;
                background: linear-gradient(90deg, var(--warning-orange), #e67e22);
            }

        .warning-title {
            font-size: 1.8em;
            font-weight: 700;
            color: var(--danger-red);
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .warning-message {
            background: linear-gradient(135deg, rgba(220, 53, 69, 0.1), rgba(255, 193, 7, 0.1));
            border: 2px solid var(--warning-orange);
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
        }

            .warning-message h4 {
                color: var(--danger-red);
                margin-bottom: 15px;
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .warning-message p {
                color: #555;
                line-height: 1.6;
                margin-bottom: 10px;
            }

        .consequences-list {
            list-style: none;
            margin-top: 20px;
        }

            .consequences-list li {
                padding: 12px 0;
                color: #555;
                display: flex;
                align-items: center;
                border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            }

                .consequences-list li:last-child {
                    border-bottom: none;
                }

                .consequences-list li::before {
                    content: '⚠️';
                    margin-right: 12px;
                    font-size: 1.2em;
                }

        .confirmation-section {
            background: var(--light-gray);
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            border: 2px dashed var(--danger-red);
        }

        .confirmation-checkbox {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 20px;
        }

            .confirmation-checkbox input[type="checkbox"] {
                width: 20px;
                height: 20px;
                accent-color: var(--danger-red);
            }

            .confirmation-checkbox label {
                font-weight: 600;
                color: var(--danger-red);
                cursor: pointer;
            }

        .btn {
            padding: 15px 30px;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            font-size: 1.1em;
        }

        .btn-danger {
            background: linear-gradient(135deg, var(--danger-red), #c82333);
            color: var(--white);
        }

            .btn-danger:hover:not(:disabled) {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(220, 53, 69, 0.4);
                color: var(--white);
                text-decoration: none;
            }

            .btn-danger:disabled {
                opacity: 0.5;
                cursor: not-allowed;
                transform: none;
            }

        .btn-secondary {
            background: var(--border-gray);
            color: var(--dark-purple);
        }

            .btn-secondary:hover {
                background: #ccc;
                color: var(--dark-purple);
                text-decoration: none;
            }

        .btn-group {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .countdown {
            background: var(--danger-red);
            color: var(--white);
            padding: 10px 20px;
            border-radius: 20px;
            font-weight: 700;
            margin-bottom: 15px;
            text-align: center;
            display: none;
        }

    </style>
</head>
<body>
    <div class="container-custom">

        <div class="page-header">
            <div class="warning-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h1><i class="fas fa-trash-alt"></i> Eliminar Plan</h1>
            <p>¿Está seguro que desea eliminar este plan?</p>
        </div>

        <div class="content-grid">

            <div class="plan-preview">
                <div class="delete-badge">
                    <i class="fas fa-skull-crossbones"></i>
                    A ELIMINAR
                </div>
                <div class="plan-header">
                    <div class="plan-name">@Model.Nombre</div>
                    <div class="plan-price">
                        <span class="currency">$</span>@Model.Precio
                    </div>
                    <div class="iva-info">
                        <i class="fas fa-calculator"></i>
                        IVA 15% incluido
                    </div>
                </div>
                <div class="plan-body">
                    <div class="plan-description">
                        @Model.Descripcion
                    </div>
                    <div class="plan-stats">
                        <div class="stat-item">
                            <div class="stat-label">Plan ID</div>
                            <div class="stat-value">#@Model.Id</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-label">Precio Base</div>
                            <div class="stat-value">$@(Math.Round(Model.Precio / 1.15, 2))</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-label">Usuarios Máx.</div>
                            <div class="stat-value">
                                @{
                                    var maxUsers = Model.Nombre.ToLower().Contains("personal") ? 1 :
                                    Model.Nombre.ToLower().Contains("familiar") ? 4 : 50;
                                }
                                @maxUsers
                            </div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-label">IVA</div>
                            <div class="stat-value">$@(Math.Round(Model.Precio - (Model.Precio / 1.15), 2))</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Warning Panel -->
            <div class="warning-panel">
                <div class="warning-title">
                    <i class="fas fa-exclamation-triangle"></i>
                    ¡ATENCIÓN!
                </div>

                <div class="warning-message">
                    <h4>
                        <i class="fas fa-skull-crossbones"></i>
                        Esta acción es IRREVERSIBLE
                    </h4>
                    <p>
                        Al eliminar este plan, se perderán permanentemente todos los datos asociados.
                        Esta operación <strong>NO SE PUEDE DESHACER</strong>.
                    </p>

                    <ul class="consequences-list">
                        <li>Se eliminará el plan de la base de datos</li>
                        <li>Los usuarios con este plan perderán acceso</li>
                        <li>Se afectarán los reportes históricos</li>
                        <li>Las suscripciones activas se cancelarán</li>
                        <li>Los pagos asociados quedarán huérfanos</li>
                    </ul>
                </div>

                <form asp-action="Delete" method="post" id="deleteForm">
                    <input type="hidden" asp-for="Id" />

                    <div class="confirmation-section">
                        <div class="confirmation-checkbox">
                            <input type="checkbox" id="confirmDelete" required />
                            <label for="confirmDelete">
                                Confirmo que entiendo las consecuencias y deseo eliminar este plan permanentemente
                            </label>
                        </div>

                        <div class="countdown" id="countdown">
                            Eliminación disponible en: <span id="countdownTimer">10</span> segundos
                        </div>
                    </div>

                    <div class="btn-group">
                        <button type="submit" class="btn btn-danger" id="deleteBtn" disabled>
                            <i class="fas fa-trash-alt"></i>
                            ELIMINAR PERMANENTEMENTE
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="fas fa-eye"></i> Ver Detalles
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        let countdownActive = false;
        let countdownTimer = 10;
        let countdownInterval;

        const confirmCheckbox = document.getElementById('confirmDelete');
        const deleteBtn = document.getElementById('deleteBtn');
        const countdownDiv = document.getElementById('countdown');
        const countdownTimerSpan = document.getElementById('countdownTimer');
        const deleteForm = document.getElementById('deleteForm');

        confirmCheckbox.addEventListener('change', function() {
            if (this.checked && !countdownActive) {
                startCountdown();
            } else if (!this.checked) {
                stopCountdown();
                deleteBtn.disabled = true;
            }
        });

        function startCountdown() {
            countdownActive = true;
            countdownDiv.style.display = 'block';
            deleteBtn.disabled = true;

            countdownInterval = setInterval(function() {
                countdownTimer--;
                countdownTimerSpan.textContent = countdownTimer;

                if (countdownTimer <= 0) {
                    stopCountdown();
                    if (confirmCheckbox.checked) {
                        deleteBtn.disabled = false;
                        deleteBtn.style.animation = 'pulse 2s infinite';
                    }
                }
            }, 1000);
        }

        function stopCountdown() {
            countdownActive = false;
            countdownTimer = 10;
            countdownTimerSpan.textContent = countdownTimer;
            countdownDiv.style.display = 'none';
            if (countdownInterval) {
                clearInterval(countdownInterval);
            }
        }

        // Confirmación de envío del formulario
        deleteForm.addEventListener('submit', function(e) {
            if (!confirmCheckbox.checked) {
                e.preventDefault();
                alert('Debe confirmar que entiende las consecuencias antes de eliminar el plan.');
                return false;
            }

            const confirmation = confirm(
                `¿ESTÁ ABSOLUTAMENTE SEGURO que desea eliminar el plan "${@Html.Raw(Model.Nombre)}"?\n\n` +
                'Esta acción es IRREVERSIBLE y eliminará:\n' +
                '• El plan de la base de datos\n' +
                '• Todas las suscripciones asociadas\n' +
                '• Los datos históricos relacionados\n\n' +
                'Escriba "ELIMINAR" para confirmar:'
            );

            if (!confirmation) {
                e.preventDefault();
                return false;
            }

            // Adicional confirmacion
            const finalConfirmation = prompt(
                'Para confirmar la eliminación, escriba exactamente: ELIMINAR'
            );

            if (finalConfirmation !== 'ELIMINAR') {
                e.preventDefault();
                alert('Confirmación incorrecta. La eliminación ha sido cancelada.');
                return false;
            }

            // Mostrar el estado de carga
            deleteBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Eliminando...';
            deleteBtn.disabled = true;

            return true;
        });

        // Añadir efectos visuales
        document.addEventListener('DOMContentLoaded', function() {
            // Haz que la vista previa del plan tiemble
            const planPreview = document.querySelector('.plan-preview');
            setInterval(() => {
                planPreview.style.animation = 'none';
                setTimeout(() => {
                    planPreview.style.animation = 'shake 0.5s ease-in-out';
                }, 10);
            }, 3000);

            // Añadir animación de movimiento
            const style = document.createElement('style');
            style.textContent = `
                @@keyframes shake {
                    0%, 100% { transform: translateX(0); }
                    25% { transform: translateX(-5px); }
                    75% { transform: translateX(5px); }
                }
            `;
            document.head.appendChild(style);
        });
    </script>
</body>
</html>
