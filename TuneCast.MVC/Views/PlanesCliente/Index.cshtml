@model IEnumerable<TuneCastModelo.Plan>

@{
    ViewData["Title"] = "Mi Plan de Suscripción";
    Layout = "_Layout";
    var suscripcionActual = ViewBag.SuscripcionActual as TuneCastModelo.Suscripcion;
    var planActual = ViewBag.PlanActual as TuneCastModelo.Plan;
    var usuarioId = ViewBag.UsuarioId;
}

<style>
    :root {
        --primary-purple: #7A00D4;
        --light-purple: #B486F6;
        --teal: #00C6C6;
        --black: #000000;
        --dark-purple: #3D0026;
        --white: #FFFFFF;
        --light-gray: #F8F9FA;
        --border-gray: #E0E0E0;
    }

    body {
        background: linear-gradient(135deg, var(--light-purple) 0%, var(--teal) 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .page-header {
        background: linear-gradient(135deg, var(--primary-purple) 0%, var(--dark-purple) 100%);
        color: var(--white);
        padding: 40px;
        border-radius: 20px;
        text-align: center;
        margin-bottom: 30px;
        box-shadow: 0 20px 40px rgba(122, 0, 212, 0.3);
    }

        .page-header h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .page-header p {
            font-size: 1.2em;
            opacity: 0.9;
        }

    .current-plan-section {
        background: var(--white);
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 40px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border-left: 6px solid var(--teal);
    }

    .current-plan-header {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
    }

    .current-plan-icon {
        background: linear-gradient(135deg, var(--teal), var(--primary-purple));
        color: var(--white);
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 20px;
        font-size: 1.5em;
    }

    .current-plan-info h2 {
        color: var(--primary-purple);
        margin: 0;
        font-size: 1.8em;
    }

    .current-plan-info p {
        color: #666;
        margin: 5px 0 0 0;
    }

    .plan-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .plan-detail-card {
        background: rgba(122, 0, 212, 0.05);
        padding: 20px;
        border-radius: 15px;
        text-align: center;
        border: 2px solid rgba(122, 0, 212, 0.1);
    }

        .plan-detail-card h4 {
            color: var(--primary-purple);
            margin-bottom: 10px;
            font-size: 1.1em;
        }

    .plan-detail-value {
        font-size: 1.5em;
        font-weight: 700;
        color: var(--dark-purple);
    }

    .available-plans-section {
        background: var(--white);
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .section-title {
        color: var(--primary-purple);
        font-size: 2em;
        margin-bottom: 20px;
        text-align: center;
        font-weight: 700;
    }

    .plans-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 30px;
        margin-top: 30px;
    }

    .plan-card {
        background: var(--white);
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border: 3px solid var(--border-gray);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .plan-card.current-plan {
            border-color: var(--teal);
            background: linear-gradient(135deg, rgba(0, 198, 198, 0.05), rgba(122, 0, 212, 0.05));
        }

        .plan-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(122, 0, 212, 0.2);
            border-color: var(--primary-purple);
        }

        .plan-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: linear-gradient(90deg, var(--primary-purple), var(--teal));
        }

    .current-plan-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        background: var(--teal);
        color: var(--white);
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.9em;
        font-weight: 600;
    }

    .plan-name {
        font-size: 1.8em;
        font-weight: 700;
        color: var(--primary-purple);
        margin-bottom: 15px;
        text-align: center;
    }

    .plan-price {
        text-align: center;
        margin-bottom: 20px;
    }

    .price-amount {
        font-size: 3em;
        font-weight: 800;
        color: var(--dark-purple);
        line-height: 1;
    }

    .price-currency {
        font-size: 0.6em;
        vertical-align: top;
    }

    .price-period {
        color: #666;
        font-size: 1.1em;
        margin-top: 5px;
    }

    .plan-description {
        color: #666;
        text-align: center;
        margin-bottom: 25px;
        line-height: 1.6;
    }

    .plan-features {
        list-style: none;
        padding: 0;
        margin-bottom: 30px;
    }

        .plan-features li {
            padding: 10px 0;
            display: flex;
            align-items: center;
            color: #555;
        }

            .plan-features li::before {
                content: '✓';
                background: var(--teal);
                color: var(--white);
                width: 24px;
                height: 24px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                margin-right: 12px;
                font-weight: bold;
                font-size: 0.8em;
            }

    .plan-actions {
        text-align: center;
    }

    .btn {
        padding: 15px 30px;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        font-size: 1em;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary-purple), var(--dark-purple));
        color: var(--white);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(122, 0, 212, 0.3);
            color: var(--white);
            text-decoration: none;
        }

    .btn-outline {
        background: transparent;
        border: 2px solid var(--teal);
        color: var(--teal);
    }

        .btn-outline:hover {
            background: var(--teal);
            color: var(--white);
            text-decoration: none;
        }

    .btn-disabled {
        background: #ccc;
        color: #666;
        cursor: not-allowed;
    }

        .btn-disabled:hover {
            transform: none;
            box-shadow: none;
        }

    .alert {
        padding: 20px;
        border-radius: 15px;
        margin-bottom: 30px;
        font-weight: 500;
    }

    .alert-success {
        background: rgba(0, 198, 198, 0.1);
        border: 2px solid var(--teal);
        color: var(--dark-purple);
    }

    .alert-danger {
        background: rgba(255, 71, 87, 0.1);
        border: 2px solid #FF4757;
        color: #FF4757;
    }

    .alert-warning {
        background: rgba(255, 193, 7, 0.1);
        border: 2px solid #FFC107;
        color: #856404;
    }

    .no-plan-message {
        background: linear-gradient(135deg, rgba(122, 0, 212, 0.1), rgba(0, 198, 198, 0.1));
        border: 2px solid var(--light-purple);
        border-radius: 20px;
        padding: 40px;
        text-align: center;
        margin-bottom: 40px;
    }

        .no-plan-message h3 {
            color: var(--primary-purple);
            font-size: 1.8em;
            margin-bottom: 15px;
        }

        .no-plan-message p {
            color: #666;
            font-size: 1.1em;
            margin-bottom: 25px;
        }

    .history-link {
        background: var(--white);
        border-radius: 15px;
        padding: 20px;
        text-align: center;
        margin-top: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="page-container">
    <div class="page-header">
        <h1><i class="fas fa-crown"></i> Mi Plan de Suscripción</h1>
        <p>Gestiona tu suscripción y explora otros planes disponibles</p>
    </div>

    <div class="actions-bar">
        <div class="iva-notice">
            <i class="fas fa-info-circle"></i>
            <div class="iva-notice-text">
                <h4>Información sobre IVA</h4>
                <p>Todos los precios mostrados incluyen IVA del 15%. Los precios base se calculan automáticamente.</p>
            </div>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Crear Nuevo Plan
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        </div>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle"></i> @ViewBag.ErrorMessage
        </div>
    }

    @if (planActual != null && suscripcionActual != null)
    {
        <div class="current-plan-section">
            <div class="current-plan-header">
                <div class="current-plan-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="current-plan-info">
                    <h2>Plan Actual: @planActual.Nombre</h2>
                    <p>Tu suscripción activa</p>
                </div>
            </div>

            <div class="plan-details">
                <div class="plan-detail-card">
                    <h4>Precio Mensual</h4>
                    <div class="plan-detail-value">$@planActual.Precio.ToString("F2")</div>
                </div>
                <div class="plan-detail-card">
                    <h4>Fecha de Inicio</h4>
                    <div class="plan-detail-value">@suscripcionActual.FechaInicio.ToString("dd/MM/yyyy")</div>
                </div>
                <div class="plan-detail-card">
                    <h4>Próxima Renovación</h4>
                    <div class="plan-detail-value">@suscripcionActual.FechaFin.ToString("dd/MM/yyyy")</div>
                </div>
                <div class="plan-detail-card">
                    <h4>Estado</h4>
                    <div class="plan-detail-value" style="color: var(--teal);">
                        @(suscripcionActual.Activa ? "Activa" : "Inactiva")
                    </div>
                </div>
            </div>

            <p><strong>Descripción:</strong> @planActual.Descripcion</p>
        </div>
    }
    else
    {
        <div class="no-plan-message">
            <h3><i class="fas fa-info-circle"></i> Sin Plan Activo</h3>
            <p>Actualmente no tienes un plan de suscripción activo. ¡Elige uno de los planes disponibles para comenzar a disfrutar de TuneCast!</p>
        </div>
    }

    <div class="available-plans-section">
        <h2 class="section-title">
            <i class="fas fa-list"></i>
            @(planActual != null ? "Cambiar Plan" : "Planes Disponibles")
        </h2>

        @if (planActual != null)
        {
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>Nota:</strong> Al cambiar de plan, tu suscripción actual se cancelará inmediatamente y comenzará la nueva suscripción.
            </div>
        }

        <div class="plans-grid">
            @foreach (var plan in Model)
            {
                <div class="plan-card @(planActual?.Id == plan.Id ? "current-plan" : "")">
                    @if (planActual?.Id == plan.Id)
                    {
                        <div class="current-plan-badge">
                            <i class="fas fa-check"></i> Plan Actual
                        </div>
                    }

                    <div class="plan-name">@plan.Nombre</div>

                    <div class="plan-price">
                        <div class="price-amount">
                            <span class="price-currency">$</span>@plan.Precio.ToString("F2")
                        </div>
                        <div class="price-period">por mes</div>
                    </div>

                    <div class="plan-description">
                        @plan.Descripcion
                    </div>

                    <ul class="plan-features">
                        @if (plan.Nombre.ToLower().Contains("personal"))
                        {
                            <li>Streaming de música básico</li>
                            <li>Calidad estándar</li>
                            <li>Anuncios limitados</li>
                            <li>1 dispositivo simultáneo</li>
                        }
                        else if (plan.Nombre.ToLower().Contains("familiar"))
                        {
                            <li>Streaming sin anuncios</li>
                            <li>Calidad alta</li>
                            <li>Hasta 6 perfiles familiares</li>
                            <li>Descarga offline</li>
                            <li>6 dispositivos simultáneos</li>
                        }
                        else if (plan.Nombre.ToLower().Contains("empresarial"))
                        {
                            <li>Streaming premium sin anuncios</li>
                            <li>Calidad lossless</li>
                            <li>Gestión de usuarios</li>
                            <li>Análisis de uso</li>
                            <li>Dispositivos ilimitados</li>
                            <li>Soporte prioritario</li>
                        }
                        else
                        {
                            <li>Todas las funciones incluidas</li>
                            <li>Acceso completo a la biblioteca</li>
                            <li>Soporte al cliente</li>
                        }
                    </ul>
                    <div class="plan-actions">
                        <a asp-action="Details" asp-route-id="@plan.Id" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Ver
                        </a>
                        <a asp-action="Edit" asp-route-id="@plan.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@plan.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Eliminar
                        </a>
                    </div>

                    <div class="plan-actions">
                        @if (planActual?.Id == plan.Id)
                        {
                            <button class="btn btn-disabled" disabled>
                                <i class="fas fa-check"></i> Plan Actual
                            </button>
                        }
                        else
                        {
                            <a href="@Url.Action("ConfirmarCambio", new { planId = plan.Id })"
                               class="btn btn-primary">
                                <i class="fas fa-exchange-alt"></i>
                                @(planActual != null ? "Cambiar a este Plan" : "Seleccionar Plan")
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="history-link">
        <a href="@Url.Action("Historial")" class="btn btn-outline">
            <i class="fas fa-history"></i> Ver Historial de Suscripciones
        </a>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">